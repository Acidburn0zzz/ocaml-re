(library
 ((name        fort_unit)
  (modules     (fort_unit))
  (libraries   (re oUnit))
  (preprocess  no_preprocessing)))

(executables
 ((libraries (re re.perl fort_unit))
  (modules (test_re))
  (names (test_re))))

